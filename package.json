{
  "name": "@nanalogue/node",
  "version": "0.1.0",
  "description": "Node.js bindings for Nanalogue: single-molecule BAM/Mod-BAM analysis",
  "main": "index.js",
  "types": "index.d.ts",
  "files": [
    "index.js",
    "index.d.ts",
    "*.node"
  ],
  "napi": {
    "name": "nanalogue",
    "triples": {
      "defaults": false,
      "additional": [
        "x86_64-apple-darwin",
        "aarch64-apple-darwin",
        "x86_64-unknown-linux-gnu",
        "x86_64-unknown-linux-musl",
        "aarch64-unknown-linux-gnu",
        "aarch64-unknown-linux-musl"
      ]
    }
  },
  "engines": {
    "node": ">= 22"
  },
  "scripts": {
    "build": "napi build --platform --release --dts native.d.ts",
    "build:debug": "napi build --platform",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "prepublishOnly": "napi prepublish -t npm"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@napi-rs/cli": "^3.5.1",
    "@types/node": "^25.2.0",
    "typescript": "^5.4.0",
    "vitest": "^4.0.18"
  },
  "keywords": [
    "bioinformatics",
    "genomics",
    "bam",
    "modifications",
    "nanopore",
    "napi-rs",
    "rust"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sathish-t/nanalogue-node"
  },
  "author": "Sathish Thiyagarajan <mail@unintegrable.com>"
}
